@model TesteDevDbm.Models.Protocolo

@{
    ViewData["Title"] = "Editar Protocolo";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Editar Protocolo</h2>
            <hr />
            <form asp-action="Editar">
                <input type="hidden" asp-for="IdProtocolo" />

                <div class="form-group mb-3">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataAbertura" class="form-label">Data de Abertura</label>
                    <input asp-for="DataAbertura" class="form-control" type="date" readonly />
                    <span asp-validation-for="DataAbertura" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ClienteId" class="form-label">Cliente</label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes">
                    </select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProtocoloStatusId" class="form-label">Status</label>
                    <select asp-for="ProtocoloStatusId" class="form-control" asp-items="ViewBag.Status">
                    </select>
                    <span asp-validation-for="ProtocoloStatusId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataFechamento" class="form-label">Data de Fechamento</label>
                    <input asp-for="DataFechamento" class="form-control" type="text" readonly />
                    <span asp-validation-for="DataFechamento" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>